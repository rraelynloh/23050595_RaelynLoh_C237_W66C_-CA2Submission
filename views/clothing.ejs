<!-- Clothing -->
 
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Snoopy Land</title>

  <style>
    .container-fluid {
      background-color: lightblue;
      color: black;
    }
    .navbar-brand {
      color: black;
      font-size: 26px;
    }

    .nav-link {
      color: black;
      font-size: 17px;
    }

    .dropdown .dropbtn {   
      border: none;
      outline: none;
      color: black;
      padding: 14px 16px;
      background-color: inherit;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      background-color: white;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
      z-index: 1;
    }

    .dropdown-content a {
      float: none;
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      text-align: left;
    }

    .topnav a:hover, .dropdown:hover .dropbtn {
      background-color: #555;
      color: white;
    }

    .dropdown-content a:hover {
      background-color: #ddd;
      color: black;
    }

    .dropdown:hover .dropdown-content {
      display: block;
    }
  
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-sm navbar-dark custom-navbar">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="/images/snoopy.png" alt="Snoopy Logo" style="width:170px;">
      Snoopy Land
    </a>
  
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav me-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Products
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="/clothing">Clothing</a></li>
            <li><a class="dropdown-item" href="/accessories">Accessories</a></li>
            <li><a class="dropdown-item" href="/drinkware">Drinkware</a></li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="aboutDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Characters
          </a>
          <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
            <li><a class="dropdown-item" href="/charliebrown">Charlie Brown</a></li>
            <li><a class="dropdown-item" href="/snoopy">Snoopy</a></li>
            <li><a class="dropdown-item" href="/woodstock">Woodstock</a></li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/newarrival">New Arrival</a>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/addClothing">Add new clothing</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Clothing List -->
<div class="container">
  <table class="table table-hover small text-center">
    <thead>
        <tr>
          <th width="50">Product Image:</th>
          <th width="50">Product Name:</th>
          <th width="50">Price:</th>
          <th width="50">Edit</th>
          <th width="50">Delete</th>
        </tr>
    </thead>
    <tbody>
      <% for(let i=0; i < clothing.length; i++) { %>
        <tr>
          <td><img src = "images/<%= clothing[i].clothingImage %> " width="50%"></td>
          <td><a href="/clothing/<%= clothing[i].clothingId %>" ><%= clothing[i].clothingName %></a></td>
          <td>$<%= clothing[i].clothingPrice.toFixed(2) %></td>
          <td><a href="/editClothing/<%= clothing[i].clothingId %>">Edit</a></td>
          <td><a href="/deleteClothing/<%= clothing[i].clothingId %>" onclick="return confirm('Are you sure you want to delete this clothing?')">Delete</a></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
</body>
</html>
