<!-- Woodstock Details -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Snoopy Land</title>

  <style>
    .container-fluid {
      background-color: lightblue;
      color: black;
    }
    .navbar-brand {
      color: black;
      font-size: 26px;
    }

    .nav-link {
      color: black;
      font-size: 17px;
    }

    .dropdown .dropbtn {   
      border: none;
      outline: none;
      color: black;
      padding: 14px 16px;
      background-color: inherit;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      background-color: white;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
      z-index: 1;
    }

    .dropdown-content a {
      float: none;
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      text-align: left;
    }

    .topnav a:hover, .dropdown:hover .dropbtn {
      background-color: #555;
      color: white;
    }

    .dropdown-content a:hover {
      background-color: #ddd;
      color: black;
    }

    .dropdown:hover .dropdown-content {
      display: block;
    }
  
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-sm navbar-dark bg custom-navbar">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="/images/snoopy.png" alt="Snoopy Logo" style="width:170px;">
      Snoopy Land
    </a>
  
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Products
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="/clothing">Clothing</a></li>
            <li><a class="dropdown-item" href="/accessories">Accessories</a></li>
            <li><a class="dropdown-item" href="/drinkware">Drinkware</a></li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="aboutDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Characters
          </a>
          <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
            <li><a class="dropdown-item" href="/charliebrown">Charlie Brown</a></li>
            <li><a class="dropdown-item" href="/snoopy">Snoopy</a></li>
            <li><a class="dropdown-item" href="/woodstock">Woodstock</a></li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/newarrival">New Arrival</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

  <div class="container">
        <br>
        <div class="text-center"><h2>Product Details</h2></div>
        <br>
        <% if (woodstock) { %> <!-- Check if woodstock data exists -->
            <div>
                <div class="text-center"><p><b>Product Image:<img src = "/images/<%= woodstock.woodstockImage %>" width="20%"></p></div>
                <div class="text-center"><p><b>Product Name:</b><br> <%= woodstock.woodstockName %></p></div>
                <div class="text-center"><p><b>Price:</b><br> $<%= woodstock.woodstockPrice.toFixed(2) %></p></div>
            </div>
        <% } else { %>
            <p>No product found.</p>
        <% } %>
        <div class="text-center"><a href ="/woodstock">Back</a></div>    
    </div>
</body>
</html>
