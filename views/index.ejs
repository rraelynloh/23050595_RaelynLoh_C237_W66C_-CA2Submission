<!-- Index -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Snoopy Land</title>

  <style>
    .container-fluid {
      background-color: lightblue;
      color: black;
    }
    .navbar-brand {
      color: black;
      font-size: 26px;
    }

    .nav-link {
      color: black;
      font-size: 17px;
    }

    .dropdown .dropbtn {   
      border: none;
      outline: none;
      color: black;
      padding: 14px 16px;
      background-color: inherit;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      background-color: white;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
      z-index: 1;
    }

    .dropdown-content a {
      float: none;
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      text-align: left;
    }

    .topnav a:hover, .dropdown:hover .dropbtn {
      background-color: #555;
      color: white;
    }

    .dropdown-content a:hover {
      background-color: #ddd;
      color: black;
    }

    .dropdown:hover .dropdown-content {
      display: block;
    }

    .custom-search-btn {
      background-color: white;
      color: black;
    }
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-sm navbar-dark bg custom-navbar">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="/images/snoopy.png" alt="Snoopy Logo" style="width:170px;">
      Snoopy Land
    </a>
  
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Products
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="/clothing">Clothings</a></li>
            <li><a class="dropdown-item" href="/accessories">Accessories</a></li>
            <li><a class="dropdown-item" href="/drinkware">Drinkwares</a></li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="aboutDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Characters
          </a>
          <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
            <li><a class="dropdown-item" href="/charliebrown">Charlie Brown</a></li>
            <li><a class="dropdown-item" href="/snoopy">Snoopy</a></li>
            <li><a class="dropdown-item" href="/woodstock">Woodstock</a></li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/newarrival">New Arrival</a>
        </li>
      </ul>
      <div class="topnav ms-auto">
        <div class="search-container">
          <form id="searchForm" class="d-flex" onsubmit="return handleSearch(event)">
            <input id="searchInput" class="form-control me-2" type="text" placeholder="Search for products..">
            <button class="btn custom-search-btn" type="submit">Search</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Carousel -->    
<div id="carouselSnoopy" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/images/snoopy_carousel.png" class="d-block w-100" alt="Carousel 1" style="height: 450px;">
    </div>
    <div class="carousel-item">
      <img src="/images/snoopy_carousel2.png" class="d-block w-100" alt="Carousel 2" style="height: 450px;">
    </div>
    <div class="carousel-item">
      <img src="/images/snoopy_carousel3.png" class="d-block w-100" alt="Carousel 3" style="height: 450px;">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselSnoopy" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselSnoopy" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>

<!-- Category Header -->
<div class="container mt-5">
  <h2 class="text-center mb-4">Categories</div>
</div>

<!-- Cards Grid -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-4 mb-4">
      <div class="card">
        <img src="/images/snoopy_clothing.png" class="d-block w-100" alt="Clothing" style="height: 100px; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title"><a href="/clothing">Clothings</a></h5>
          <p class="card-text">Shop our latest clothing for all your fashion needs.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card">
        <img src="/images/snoopy_accessories.png" class="d-block w-100" alt="Accessories" style="height: 100px; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title"><a href="/accessories">Accessories</a></h5>
          <p class="card-text">Discover trendy accessories to complete your style.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card">
        <img src="/images/snoopy_drinkware.png" class="d-block w-100" alt="Drinkware" style="height: 100px; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title"><a href="/drinkware">Drinkwares</a></h5>
          <p class="card-text">Enjoy your favorite drinks in our elegant drinkware options.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Contact Us -->
<section id="contact-form" class="py-5">
  <div class="container">
    <h2>Contact Us</h2>
    <p>Reach out to us with any inquiries or concerns.</p>
    <ul>
      <li>Email: info@snoopyland.com</li>
      <li>Phone: 123-456-7890</li>
      <li>Address: Woodlands, Singapore</li>
    </ul>

    <form id="contactForm" class="mt-4">
      <div class="mb-3">
        <label for="fullName" class="form-label">Full Name:</label>
        <input type="text" class="form-control form-control-sm" id="fullName" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email address:</label>
        <input type="email" class="form-control form-control-sm" id="email" aria-describedby="emailHelp" required>
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
        <label for="message" class="form-label">Message:</label>
        <textarea class="form-control form-control-sm" id="message" rows="4" style="resize: none;" required></textarea>
        <!-- You can adjust the rows attribute to control the initial size -->
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</section>



<script>
  // Handle form submission
  document.getElementById('contactForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent the form from submitting

    // Validation (you can add more specific validation as needed)
    const fullName = document.getElementById('fullName').value.trim();
    const email = document.getElementById('email').value.trim();
    const message = document.getElementById('message').value.trim();

    if (!fullName || !email || !message) {
      alert('Please fill out all fields.');
      return;
    }

    // Normally here you would send the form data to a server using fetch or XMLHttpRequest
    // For demonstration purposes, let's just log the data
    console.log('Submitted:', { fullName, email, message });

    // Optionally, clear the form fields after submission
    document.getElementById('fullName').value = '';
    document.getElementById('email').value = '';
    document.getElementById('message').value = '';

    // Inform user about successful submission 
    alert('Thank you for your message! We will get back to you soon.');
  });
</script>

<script>
  function handleSearch(event) {
    event.preventDefault();
    const query = document.getElementById('searchInput').value;
    if (query) {
      window.location.href = `/search?query=${encodeURIComponent(query)}`;
    }
  }
</script>

</body>
</html>
